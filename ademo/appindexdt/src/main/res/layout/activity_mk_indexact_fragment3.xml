<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/redFEEFEE"
    android:gravity="center_vertical"
    android:orientation="horizontal">

    <ImageView
        android:id="@+id/redSpeaker"
        android:layout_width="25mm"
        android:layout_height="25mm"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="15mm"
        android:layout_marginTop="10mm"
        android:layout_marginRight="15mm"
        android:layout_marginBottom="10mm"
        android:scaleType="fitXY"
        android:src="@mipmap/speaker" />

    <com.haier.cellarette.baselibrary.marqueelibrary.SimpleMarqueeView
        android:id="@+id/marqueeView1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:animateFirstView="true"
        android:autoStart="true"
        android:flipInterval="2500"
        android:inAnimation="@anim/in_top"
        android:outAnimation="@anim/out_bottom"
        app:marqueeAnimDuration="500"
        app:smvTextColor="@color/white"
        app:smvTextGravity="center_vertical"
        app:smvTextSize="15sp" />
</LinearLayout>

