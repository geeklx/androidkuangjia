<?xml version="1.0" encoding="utf-8"?>
<com.geek.libbase.widgets.LxRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/rl1"
    android:layout_width="wrap_content"
    android:layout_height="40mm"
    android:layout_marginLeft="10mm"
    android:layout_marginRight="10mm"
    android:clipChildren="false"
    android:orientation="vertical"
    app:is_touch="true">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:clipChildren="false"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tv1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:text="ceccccccccccc"
            android:textColor="@color/black"
            android:textSize="14mm" />

        <View
            android:id="@+id/view1"
            android:layout_width="match_parent"
            android:layout_height="2mm"
            android:layout_marginTop="4mm"
            android:background="@color/red" />


    </LinearLayout>

</com.geek.libbase.widgets.LxRelativeLayout>

