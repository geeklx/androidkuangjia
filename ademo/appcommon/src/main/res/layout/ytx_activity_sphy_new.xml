<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/tools"
    android:orientation="vertical">

    <View
        android:layout_width="match_parent"
        android:layout_height="100mm"
        android:background="@color/colorE60000" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <include
            layout="@layout/ytx_activity_sphy1"
            android:layout_width="match_parent"
            android:layout_height="180dp"
            android:layout_marginTop="30dp"
            />

        <com.geek.tablib.tablayout.SlidingTabLayout
            android:id="@+id/sp_tab_layout"
            android:layout_width="match_parent"
            android:paddingBottom="10mm"
            android:background="@color/white"
            app:tl_indicator_width_equal_title="true"
            app:tl_tab_space_equal="true"
            android:layout_height="35mm"
            app:tl_indicator_color="@color/colorE60000"
            app:tl_indicator_corner_radius="1.5dp"
            app:tl_indicator_height="3mm"
            app:tl_textSelectColor="@color/colorE60000"
            app:tl_textUnselectColor="@color/black" />

        <com.geek.libbase.widgets.ViewPagerSlide
            android:id="@+id/sp_view_pager"
            android:background="#F1F2F4"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

    </LinearLayout>

</RelativeLayout>
