<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorF1F2F4"
    >

    <View
        android:layout_width="match_parent"
        android:layout_height="50mm"
        android:background="@color/defaultred"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="vertical">

        <include layout="@layout/activity_co_top2" />
        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="30mm"
            android:background="@drawable/btn_common_shape_white2my">

            <com.geek.libglide47.base.GlideImageView
                android:id="@+id/iv2"
                android:layout_width="58mm"
                android:layout_height="58mm"
                android:layout_marginLeft="30mm"
                android:layout_marginTop="30mm"
                android:scaleType="centerCrop"
                android:src="@drawable/icon_grxx1"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20mm"
                android:layout_marginTop="30mm"
                android:text="ces"
                android:textColor="@color/black"
                android:textSize="19mm"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@+id/iv2"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/tv_signature"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20mm"
                android:layout_marginTop="5mm"
                android:text="12345"
                android:textColor="@color/white_999999"
                android:textSize="14mm"
                android:textStyle="bold"
                app:layout_constraintLeft_toRightOf="@+id/iv2"
                app:layout_constraintTop_toBottomOf="@+id/tv_name" />

            <ImageView
                android:id="@+id/iv1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginLeft="20mm"
                android:layout_marginTop="10mm"
                android:layout_marginRight="20mm"
                app:layout_constraintTop_toBottomOf="@+id/iv2" />

            <TextView
                android:id="@+id/tv3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="20mm"
                android:text="扫描上面二维码加我为好友"
                android:textColor="@color/white_666666"
                android:textSize="14mm"
                android:textStyle="bold"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/iv1" />

            <View
                android:id="@+id/tv4"
                android:layout_width="1mm"
                android:layout_height="30mm"
                app:layout_constraintLeft_toRightOf="@+id/iv2"
                app:layout_constraintTop_toBottomOf="@+id/tv3" />
        </androidx.constraintlayout.widget.ConstraintLayout>

    </LinearLayout>

</RelativeLayout>