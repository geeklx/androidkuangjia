                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="12mm"
                android:src="@drawable/icon_my1" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/rl4"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
