<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="50mm"
    android:background="@color/white"
    android:clipChildren="false"
    android:orientation="vertical"
    tools:ignore="MissingDefaultResource">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:visibility="gone">

        <View
            android:layout_width="match_parent"
            android:layout_height="1mm"
            android:background="@color/color_E8E8E8"
            android:visibility="visible" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/ll1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4mm"
        android:gravity="center"
        android:orientation="vertical"
        android:visibility="visible">
        <ImageView
            android:id="@+id/iv_imgurl"
            android:layout_width="24mm"
            android:layout_height="24mm"
            android:layout_centerHorizontal="true"
            android:scaleType="centerCrop"
            android:background="@drawable/ic_default_com2" />


        <!--selector__txt-->
        <TextView
            android:id="@+id/tv_content1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_imgurl"
            android:layout_centerHorizontal="true"
            android:gravity="center"
            android:text="ces"
            android:textColor="@color/color_42628C"
            android:textSize="10mm"
            android:visibility="visible" />

    </LinearLayout>

    <TextView
        android:id="@+id/tv_hongdian1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="4mm"
        android:text=""
        android:textColor="@color/red"
        android:textSize="10mm" />
</RelativeLayout>
