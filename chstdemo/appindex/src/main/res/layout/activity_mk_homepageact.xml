<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/app_bg_two"
    android:fitsSystemWindows="true">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="25mm"
        android:layout_marginTop="15mm"
        android:layout_marginRight="25mm"
        android:layout_marginBottom="30mm">

        <FrameLayout
            android:id="@+id/mkdemo2_page_0_item_0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </FrameLayout>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_below="@+id/mkdemo2_page_0_item_0"
            android:layout_marginTop="25mm">

            <FrameLayout
                android:id="@+id/mkdemo2_page_0_item_1"
                android:layout_width="0dp"
                android:layout_marginRight="20mm"
                android:layout_height="match_parent"
                android:layout_weight="1.5" />

            <FrameLayout
                android:id="@+id/mkdemo2_page_0_item_2"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1" />

        </LinearLayout>

    </RelativeLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
