<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".view.UdpTestActivity">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="ip:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_ip_addr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="172.22.72.26"
                android:hint="UDP服务端地址"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:text="端口:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>
            <EditText
                android:id="@+id/et_port"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="8888"
                android:hint="端口"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="发送数据长度:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_send_data_len"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="100"
            android:hint="发送消息长度"/>

    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:text="发送数据内容:"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <EditText
            android:id="@+id/et_send_data"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello, server"/>

    </LinearLayout>

    <CheckBox
        android:id="@+id/cb_send_looper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="循环发送"/>

    <Button
        android:id="@+id/btn_sendto"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="sendto发送"/>

    <TextView
        android:id="@+id/tv_recv_len"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="接收数据长度"/>
    <TextView
        android:id="@+id/tv_recv_data"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:hint="数据接收区"/>



</LinearLayout>