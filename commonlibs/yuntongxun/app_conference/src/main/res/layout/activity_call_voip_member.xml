<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:background="@color/white"
    android:layout_height="match_parent">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="@dimen/LargePadding">

        <EditText
            android:id="@+id/user_id1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="成员userid" />

        <EditText
            android:id="@+id/user_name1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:hint="成员名字" />

        <LinearLayout
            android:layout_width="match_parent"
            android:orientation="horizontal"
            android:layout_height="wrap_content">


            <Button
                android:id="@+id/voip_voice_call_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/LargestPadding"
                android:background="@drawable/yh_yellow_btn_style"
                android:text="语音呼叫"
                android:textColor="@color/white"
                android:textSize="@dimen/ld_text_size_16" />


            <Button
                android:layout_marginStart="@dimen/NormalPadding"
                android:id="@+id/voip_video_call_btn"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/LargestPadding"
                android:background="@drawable/yh_blue_tbn_style"
                android:text="视频呼叫"
                android:textColor="@color/white"
                android:textSize="@dimen/ld_text_size_16" />


        </LinearLayout>



    </LinearLayout>
</ScrollView>